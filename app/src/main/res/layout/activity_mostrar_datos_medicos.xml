                android:textColor="#000000"
                android:textSize="20sp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:text="IMC"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Medico_IMC"
                android:layout_width="match_parent"
