                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/beneFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:text="-"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:text="Caso"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
